{
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "preact"
  },
  "tasks": {
    "client-dev": "deno run --allow-all https://deno.land/x/esbuild@v0.19.11/mod.js components/App.tsx --format=esm --watch --jsx=automatic --jsx-import-source=preact --outfile=client/bundle.js --external:preact --external:preact/hooks --external:preact/jsx-runtime --sourcemap --bundle",
    "client-build": "deno run --allow-all https://deno.land/x/esbuild@v0.19.11/mod.js components/App.tsx --bundle --minify --format=esm --jsx=automatic --jsx-import-source=preact --outfile=client/bundle.js --external:preact --external:preact/hooks --external:preact/jsx-runtime",
    "dev": "deno run --allow-read --allow-net --allow-write --allow-run --allow-env --watch main.tsx",
    "go": "deno task client-dev & deno task dev",
    "compile": "deno task client-build && deno compile --allow-run --allow-write --allow-read --allow-env --allow-net --allow-ffi --include client --include components --output ../automated-tools main.tsx"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.8.5",
    "@std/assert": "jsr:@std/assert@1",
    "preact": "npm:preact@^10.26.6",
    "preact/hooks": "npm:preact@^10.26.6/hooks",
    "preact/jsx-runtime": "npm:preact@^10.26.6/jsx-runtime",
    "preact-render-to-string": "npm:preact-render-to-string@^6.5.13"
  }
}
